<p><img src="http://610homegeneva.com/wp-content/uploads/2010/03/610home-black.jpg"></p>

<div class="page-header">
  <h1>Tell us about your current room.....</h1>
</div>

<% if @current_room.errors.any? %>
  <% @current_room.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_current_room" class="form-horizontal">
  <!-- Label and input for height -->
  <div class="form-group">
    <label for="height" class="col-sm-2 control-label">
      Height
    </label>
    <div class="col-sm-10">
      <input type="text" id="height" name="height" placeholder="Height" class="form-control" value="<%= @current_room.height %>">
    </div>
  </div>

  <!-- Label and input for Width -->
  <div class="form-group">
    <label for="Width" class="col-sm-2 control-label">
      Width
    </label>
    <div class="col-sm-10">
      <input type="text" id="Width" name="Width" placeholder="Width" class="form-control" value="<%= @current_room.Width %>">
    </div>
  </div>

  <!-- Label and input for room_type -->
  <div class="form-group">
    <label for="room_type" class="col-sm-2 control-label">
      Room type
    </label>
    <div class="col-sm-10">
      <textarea id="room_type" name="room_type" placeholder="Room type" class="form-control" rows="3"><%= @current_room.room_type %></textarea>
    </div>
  </div>


  <!-- Label and input for room_image -->
  <form action="/create_current_room" class="form-horizontal" method="post" enctype="multipart/forms-data">
  <div class="form-group">
    <label for="room_image" class="col-sm-2 control-label">
      Room image
    </label>
    <div class="col-sm-10">
      <input type="file" id="room_image" name="room_image" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Current Room" class="btn btn-primary">
    </div>
  </div>
</form>
